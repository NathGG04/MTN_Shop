@model NTM_SHOP.ModelViews.LoginViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Login/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Login/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Login/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Login/css/style.css">

    <title>Đăng nhập quản trị</title>
</head>
<body>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/Login/images/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h4>Đăng nhập tài khoản quản trị</h4>
                            </div>

                            <form id="loginForm" asp-area="Admin" asp-controller="AdminLogin" asp-action="Index" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group first">
                                    <label>Email</label>
                                    <input asp-for="UserName" class="form-control" placeholder="Nhập Email" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-group last mb-4">
                                    <label>Mật khẩu</label>
                                    <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="d-flex mb-4 align-items-center">
                                    <label class="control control--checkbox mb-0">
                                        <span class="caption">Ghi nhớ đăng nhập</span>
                                        <input type="checkbox" id="rememberMe" />
                                        <div class="control__indicator"></div>
                                    </label>
                                </div>

                                <input type="submit" value="Đăng nhập" class="btn btn-block btn-primary">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Login/js/jquery-3.3.1.min.js"></script>
    <script src="~/Login/js/popper.min.js"></script>
    <script src="~/Login/js/bootstrap.min.js"></script>
    <script src="~/Login/js/main.js"></script>
</body>
</html>
